!!!
%html
  %head
    %title Donote
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %link{:href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"}/
    %link{:href => "//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css", :rel => "stylesheet"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Josefin+Slab|Satisfy|Ubuntu+Condensed", :rel => "stylesheet", :type => "text/css"}/
  %body
    - if notice
      %p.notice= notice
    - if alert
      %p.alert= alert
    %nav.navbar.navbar-default
      .container-fluid
        .nav-container
          .home-logo= link_to "Donote",root_path
          - if user_signed_in?
            = link_to content_tag(:i,nil, class: 'fa fa-sign-out right-nav-link pull-right'), destroy_user_session_path, method: :delete
            = link_to content_tag(:i,nil, class: 'fa fa-user right-nav-link pull-right'), edit_user_registration_path
          - else
            = link_to content_tag(:i,nil, class: 'fa fa-sign-in right-nav-link pull-right'), new_user_session_path
    = yield
