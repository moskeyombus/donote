
.row
  .col-xs-2
  .col-xs-8
    .new-artist-container
      %p.new-artist-header New Artist
      = simple_form_for @artist, :html => {:multipart => true} do |f|
        = f.file_field :image, label: "Upload Artist Image"
        .name-header Name
        = f.text_field :name, label: 'Name'
        = f.simple_fields_for @user do |u|
          .email-header Email
          = u.text_field :email, label: 'Email'
          .password-header Password
          = u.password_field :password, label: 'Password'
        = f.submit 'Submit', class: 'btn btn-success'
  .col-xs-2
